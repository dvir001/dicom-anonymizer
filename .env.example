# DICOM Anonymizer Configuration
# Set your application password here
APP_PASSWORD=your_secure_password_here

# Flask Configuration
FLASK_SECRET_KEY=your_flask_secret_key_here
FLASK_ENV=production
FLASK_APP=app.py

# Session Configuration (optional)
SESSION_TIMEOUT_MINUTES=60

# Brute Force Protection Configuration (optional)
# Maximum failed login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in seconds (default: 300 = 5 minutes)
LOGIN_LOCKOUT_DURATION=300

# Exponential backoff base for login delays (default: 2 seconds)
EXPONENTIAL_BACKOFF_BASE=2

# Docker Configuration
CONTAINER_NAME=dicom-anonymizer
COMPOSE_PROJECT_NAME=docker
APP_PORT=5000
RESTART_POLICY=unless-stopped

# Traefik Configuration
TRAEFIK_ENABLE=true
TRAEFIK_HOST=your-domain.com
TRAEFIK_CERT_RESOLVER=dns1
TRAEFIK_ENTRYPOINTS=http,https
TRAEFIK_TLS=true
TRAEFIK_MIDDLEWARES=secure-headers
TRAEFIK_SERVICE_PORT=5000
TRAEFIK_NETWORK=traefik_lan
TRAEFIK_NETWORK_EXTERNAL=true

# Volume Configuration
UPLOAD_VOLUME_NAME=dicom_uploads
OUTPUT_VOLUME_NAME=dicom_outputs
VOLUME_DRIVER=local
VOLUME_TYPE=tmpfs
VOLUME_DEVICE=tmpfs
VOLUME_OPTIONS=size=2G,noexec,nosuid,nodev

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
